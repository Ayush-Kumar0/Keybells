<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>

        <!-- External CSS -->
        <link rel="stylesheet" href="/css/type.css" type="text/css">

        <!-- JQuery AJAX -->
        <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
        <!-- External javascript -->
        <script defer src="/scripts/type.js" type="text/javascript"></script>
    </head>

    <body>
        <!-- Navigation bar -->
        <nav id="nav">

            <!-- Left -->
            <div class="left">
                <a href=""><img src="/images/type/bars.svg" alt="back"></a>
            </div>


            <!-- Right -->
            <div class="right">
                <ul class="options-list">
                    <li class="option">
                        <a class="nav-btn" href="#"><img src="/images/type/pause.svg" alt="pause"></a>
                    </li>
                    <li class="option">
                        <a class="nav-btn" href="#"><img src="/images/type/reset.svg" alt="reset"></a>
                    </li>
                    <!-- Toggle sound -->
                    <!-- <li class="options">
                        <a class="nav-btn" href="#"></a>
                    </li> -->
                </ul>
            </div>
        </nav>

        <div id="content">
            <!-- Text area -->
            <div id="text">

                <div class="envelope">
                    <% for(let i=0;i<locals.para.length;i++){ %>
                        <!-- "unit" can be "next" or "done" -->
                        <div class="unit">
                            <% if(para[i]!==' ' ){ %>
                                <div class="letter">
                                    <%= locals.para[i] %>
                                </div>
                                <% } else{ %>
                                    <div class="space">i</div>
                                    <% } %>
                        </div>
                        <% } %>
                </div>
                <!-- Progress bar -->
                <div id="progress-bar"></div>

            </div>


            <!-- Keyboard highlighting area -->
            <div id="keyboard">
                <!-- Row 1 -->
                <div class="row1">
                    <span id="tilde">
                        <div>~</div>
                        <div>`</div>
                    </span>
                    <span id="1">
                        <div>!</div>
                        <div>1</div>
                    </span>
                    <span id="2">
                        <div>@</div>
                        <div>2</div>
                    </span>
                    <span id="3">
                        <div>#</div>
                        <div>3</div>
                    </span>
                    <span id="4">
                        <div>$</div>
                        <div>4</div>
                    </span>
                    <span id="5">
                        <div>%</div>
                        <div>5</div>
                    </span>
                    <span id="6">
                        <div>^</div>
                        <div>6</div>
                    </span>
                    <span id="7">
                        <div>&</div>
                        <div>7</div>
                    </span>
                    <span id="8">
                        <div>*</div>
                        <div>8</div>
                    </span>
                    <span id="9">
                        <div>(</div>
                        <div>9</div>
                    </span>
                    <span id="0">
                        <div>)</div>
                        <div>0</div>
                    </span>
                    <span id="hyphen">
                        <div>_</div>
                        <div>-</div>
                    </span>
                    <span id="equal">
                        <div>+</div>
                        <div>=</div>
                    </span>
                    <span id="backspace">
                        <div>backspace</div>
                    </span>
                </div>

                <!-- Row 2 -->
                <div class="row2">
                    <span id="tab">
                        <div>tab</div>
                    </span>
                    <span id="q">
                        <div>q</div>
                    </span>
                    <span id="w">
                        <div>w</div>
                    </span>
                    <span id="e">
                        <div>e</div>
                    </span>
                    <span id="r">
                        <div>r</div>
                    </span>
                    <span id="t">
                        <div>t</div>
                    </span>
                    <span id="y">
                        <div>y</div>
                    </span>
                    <span id="u">
                        <div>u</div>
                    </span>
                    <span id="i">
                        <div>i</div>
                    </span>
                    <span id="o">
                        <div>o</div>
                    </span>
                    <span id="p">
                        <div>p</div>
                    </span>
                    <span id="l-bigbracket">
                        <div>{</div>
                        <div>[</div>
                    </span>
                    <span id="r-bigbracket">
                        <div>}</div>
                        <div>]</div>
                    </span>
                    <span id="backslash">
                        <div>|</div>
                        <div>\</div>
                    </span>
                </div>

                <!-- Row 3 -->
                <div class="row3">
                    <span id="caps-lock">
                        <div>cap lock</div>
                    </span>
                    <span id="a">
                        <div>a</div>
                    </span>
                    <span id="s">
                        <div>s</div>
                    </span>
                    <span id="d">
                        <div>d</div>
                    </span>
                    <span id="f">
                        <div>f</div>
                    </span>
                    <span id="g">
                        <div>g</div>
                    </span>
                    <span id="h">
                        <div>h</div>
                    </span>
                    <span id="j">
                        <div>j</div>
                    </span>
                    <span id="k">
                        <div>k</div>
                    </span>
                    <span id="l">
                        <div>l</div>
                    </span>
                    <span id="semi-colon">
                        <div>:</div>
                        <div>;</div>
                    </span>
                    <span id="quote">
                        <div>"</div>
                        <div>'</div>
                    </span>
                    <span id="enter">
                        <div>enter</div>
                    </span>
                </div>

                <!-- Row 4 -->
                <div class="row4">
                    <span id="l-shift">
                        <div>shift</div>
                    </span>
                    <span id="z">
                        <div>z</div>
                    </span>
                    <span id="x">
                        <div>x</div>
                    </span>
                    <span id="c">
                        <div>c</div>
                    </span>
                    <span id="v">
                        <div>v</div>
                    </span>
                    <span id="b">
                        <div>b</div>
                    </span>
                    <span id="n">
                        <div>n</div>
                    </span>
                    <span id="m">
                        <div>m</div>
                    </span>
                    <span id="comma">
                        <div>&lt;</div>
                        <div>,</div>
                    </span>
                    <span id="dot">
                        <div>&gt;</div>
                        <div>.</div>
                    </span>
                    <span id="slash">
                        <div>?</div>
                        <div>/</div>
                    </span>
                    <span id="r-shift">
                        <div>shift</div>
                    </span>
                </div>

                <!-- Row 5 -->
                <div class="row5">
                    <span id="l-control">
                        <div>control</div>
                    </span>
                    <span id="l-option">
                        <div>option</div>
                    </span>
                    <span id="space">
                        <div>space</div>
                    </span>
                    <span id="r-option">
                        <div>option</div>
                    </span>
                    <span id="r-control">
                        <div>control</div>
                    </span>
                </div>
            </div>

        </div>

    </body>

</html>
